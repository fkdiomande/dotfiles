# Define specific applications size
for_window [class="(?i)1password"] resize set 2000 px 1500 px
for_window [class="(?i)terminator"] resize set 2000 px 1500 px
for_window [class="(?i)pamac-manager"] resize set 2000 px 1500 px
for_window [class="(?i)org.gnome.Nautilus"] resize set 2000 px 1500 px

# Set shut down, restart and locking features
bindsym $mod+Control+Delete mode "$mode_system"
set $mode_system (R)eboot | (S)hutdown
mode "$mode_system" {
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym s exec --no-startup-id shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Resize window (you can also use the mouse for that)
bindsym $mod+r mode "$resize"
set $resize Resize
mode "$resize" {
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Shift+Left resize shrink width 20 px or 20 ppt

        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Shift+Down resize grow height 20 px or 20 ppt

        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Shift+Up resize shrink height 20 px or 20 ppt

        bindsym Right resize grow width 5 px or 5 ppt
        bindsym Shift+Right resize grow width 20 px or 20 ppt

        # exit resize mode: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

