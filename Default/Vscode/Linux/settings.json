  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "Text",
        "scope": "variable.parameter.function",
        "settings": {
          "foreground": "#7799BB"
        }
      },
      {
        "name": "comments",
        "scope": [
          "comment",
          "punctuation.definition.comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "beginning.punctuation.definition.list.markdown.xi"
        ],
        "settings": {
          "fontStyle": "italic",
          "foreground": "#3c6683"
        }
      },
      {
        "scope": [
          "variable",
          "constant",
          "constant.language",
          "variable.language"
        ],
        "settings": {
          "foreground": "#02a8a8"
        }
      },
      {
        "scope": [
          "string",
          "string.quoted",
          "string.quoted.double",
          "string.quoted.other",
          "string.quoted.single",
          "string.quoted.triple",
          "string.unquoted",
          "string.regexp"
        ],
        "settings": {
          "foreground": "#50d890"
        }
      }
    ]
  },
  "multiCommand.commands": [
