{
  // Files
  "files.exclude": {
    "**/.git": true,
    "**/.idea": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/vendor": true,
    // "**/node_modules": true,
    "**/Thumbs.db": true
  },
  "files.autoSave": "onFocusChange",
  "files.defaultLanguage": "markdown",
  // Editor
  "editor.minimap.enabled": false,
  "editor.fontSize": 12,
  "editor.renderWhitespace": "trailing",
  "editor.linkedEditing": true,
  "editor.suggest.insertMode": "replace",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.tabSize": 1,
  "editor.lineHeight": 25,
  "editor.guides.indentation": false,
  "editor.occurrencesHighlight": false,
  "editor.selectionHighlight": false,
  "editor.matchBrackets": "near",
  "editor.rulers": [120],
  "editor.tabCompletion": "on",
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontWeight": "450",
  "editor.mouseWheelZoom": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.sortImports": true
  },
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.fontSize": 12,
  // Workbench
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.editor.enablePreview": true,
  "workbench.editor.wrapTabs": true,
  // "workbench.tree.indent": 20,
  "workbench.tree.expandMode": "doubleClick",
  "security.workspace.trust.untrustedFiles": "open",
  "svg.preview.mode": "svg",
  "breadcrumbs.enabled": false,
  "emmet.triggerExpansionOnTab": true,
  // Explorer
  "explorer.confirmDelete": false,
  "window.zoomLevel": 0.6,
  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": false,
  // Gitlens
  "gitlens.views.commitDetails.files.layout": "list",
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.currentLine.enabled": true,
  // "gitlens.hovers.annotations.over": "line",
  "gitlens.blame.highlight.enabled": false,
  "gitlens.currentLine.pullRequests.enabled": true,
  "gitlens.currentLine.scrollable": true,
  "gitlens.codeLens.enabled": false,
  "githd.blameView.enabled": false,
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "emmet.excludeLanguages": ["markdown", "php"],
